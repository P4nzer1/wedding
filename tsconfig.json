{
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"],
          "@app/*": ["./src/app/*"],
          "@widgets/*": ["./src/widgets/*"],
          "@shared/*": ["./src/shared/*"],
          "@pages/*": ["./src/pages/*"],
          "@styles/*": ["./src/styles/*"]
        }
    },
    "include": [
      "src/**/*",
      "vite.config.ts"
    ]
}