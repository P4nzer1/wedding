{
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"],
          "@app/*": ["./src/app/*"],
          "@widgets/*": ["./src/widgets/*"],
          "@shared/*": ["./src/shared/*"],
          "@assets/*": ["./src/assets/*"]
        }
    },
    "include": ["src/**/*"]
}